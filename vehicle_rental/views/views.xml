     <!-- Vehicles Search View -->

        <record model="ir.ui.view" id="vehicle_search">
            <field name="name">Rent Vehicles 1.0</field>
            <field name="model">vehicle_rental.vehicle_rental</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Vehicle create">
                    <field name="vehicle" />
					<field name="v_name" />
					<field name="brand" select="1" />
					<field name="registration" />
					<field name="model" />
                    <field name="currency_id" invisible="1"/>
					<field name="rent" widget='monetary' options="{'currency_field': 'currency_id'}" readonly="False" />
					<field name="state" />

                </tree>
            </field>
        </record>

    <!-- actions opening views on models -->

