<odoo>
    <data>

        <!-- fleet inheritance -->

        <record model="ir.ui.view" id="fleet_inherit">
            <field name="name">vehicle.rental.inherit</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">
                <field name="manager_id"/>
                <field name="first_contract_date" position="replace">
                    <field name="registration_date"/>
                </field>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="vehicle_rental.action_window">
            <field name="name">Vehicle Rental</field>
            <field name="res_model">vehicle.rental</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_filter_name_avail': 1}
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Vehicles Added
                </p>
            </field>
        </record>

        <!--       actions Rent Request -->

        <record model="ir.actions.act_window"
                id="vehicle_rental.action_window_request">
            <field name="name">Rental Request</field>
            <field name="res_model">rent.request</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Vehicle Request
                </p>
            </field>
        </record>

        <!--  Top menu item  -->
        <menuitem name="Vehicle Rental" id="vehicle_rental.menu_root"/>
        <!--  menu categories  -->
        <menuitem name="Vehicles" id="vehicle_rental.menu_vehicle"
                  parent="vehicle_rental.menu_root"/>

        <menuitem name="Reporting" id="vehicle_rental.menu_vehicle_reporting"
                  parent="vehicle_rental.menu_root" action="vehicle_rental.action_window_report"/>
        <!--  actions  -->
        <menuitem name="Vehicle Rental" id="vehicle_rental.menu_vehicle_rental"
                  parent="vehicle_rental.menu_vehicle"
                  action="vehicle_rental.action_window"/>

        <menuitem name="Rental Request"
                  id="vehicle_rental.menu_vehicle_rental_request"
                  parent="vehicle_rental.menu_vehicle"/>

        <menuitem name="Report"
                  id="vehicle_rental.menu_report_wizard"
                  parent="vehicle_rental.menu_vehicle_reporting"
                  action="vehicle_rental.action_window_report"/>
    </data>
</odoo>
