 <odoo>
    <data>

<!-- Request rental Form view -->
        <record model="ir.ui.view" id="rental_request_form">
            <field name="name">vehicle.request.form</field>
            <field name="model">rent.request</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Vehicle request">

                    <header>
                       <button name="action_confirm" string="Confirm"   class="oe_highlight" type="object" states="draft" groups="vehicle_rental.group_vehicle_manager" />
                        <button name="action_return" string="Return" class="oe_highlight" type="object" states="confirm"  />
                        <button name="action_invoice" string="Invoice" class="oe_highlight" type="object" states="confirm"  />

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                         <widget name="web_ribbon" title="Paid" bg_color="bg-success" attrs="{'invisible': [('state', '!=','invoiced')]}"/>

                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_invoice"
                            icon="fa-edit"  string="Invoicing"  widget="statinfo" type="object"  attrs="{'invisible': ['|',('state', '=','draft'), ('state', '=','invoiced')]}"/>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="customer_id" widget="res_partner_many2one" context="{'res_partner_search_mode':
                                'customer', 'show_address': 1, 'show_vat':True}" options='{"always_reload":True}'/>
                                <field name="request_date"/>
                                <field name="vehicle_id"/>
                                <field name="currency_id" invisible="1"/>


                            </group>
                            <group>
                                <field name="from_date"/>
                                <field name="to_date"/>
                                <field name="period" readonly="1" force_save="1"/>
                                <field name="rent_request" widget='monetary'
                                       options="{'currency_field': 'currency_id'}"
                                       readonly="False"/>

                                <label for="period_type" string="Period Type" />
                                <div class="address_format">
                                     <field name="unit"  style="width: 20%"/>
                                    <field name="period_type" style="width: 80%"/>
                                </div>
                                 <field name="rent_total" widget='monetary'
                                       options="{'currency_field': 'currency_id'}"
                                       readonly="False"/>

                                </group>
                            </group>
                    </sheet>
                    <div class="oe_chatter">
         <field name="message_follower_ids" widget="mail_followers"/>
         <field name="message_ids" widget="mail_thread"/>
        </div>
                </form>
            </field>
        </record>

        <!-- Rental Request Tree View -->

        <record model="ir.ui.view" id="rental_request_tree">
            <field name="name">vehicle.request.tree</field>
            <field name="model">rent.request</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree decoration-danger="late == True" decoration-warning="warning == True"  string="Vehicle tree" >
                    <field name="name"/>
                    <field name="customer_id"/>
                    <field name="vehicle_id"/>
                    <field name="request_date"/>
                    <field name="from_date" optional="hide"/>
                    <field name="to_date" optional="hide"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="period" optional="hide"/>
                    <field name="state" optional="hide"/>
                    <field name="rent_request" widget='monetary'
                           options="{'currency_field': 'currency_id'}"
                           readonly="False" optional="hide"/>
                    <field name="warning" invisible="1"/>
                    <field name="late" invisible="1"/>
                </tree>
            </field>
        </record>


         <!-- Rental Request kanban View -->

        <record id="view_kanban_vehicle_request" model="ir.ui.view">
            <field name="name">vehicle.request.kanban</field>
            <field name="model">rent.request</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="vehicle_id"/>
                    <field name="customer_id"/>
                    <field name="period"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>Vehicle:
                                    <strong>
                                        <field name="vehicle_id"/>
                                    </strong>
                                </div>
                                <div>Customer:
                                    <field name="customer_id"/>
                                </div>
                                <div>Period:
                                    <field name="period"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>